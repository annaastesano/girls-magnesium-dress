# top-most EditorConfig file
root = true
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python and Markdown
[*.py, *.md]

# Javascript
[*.{js,json}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS, SCSS
[*.{css,scss}]
indent_size = 2

# Yaml
[*.yaml]
indent_size = 2


[*.md]
max_line_length = off
trim_trailing_whitespace = false
